/* pages/report/report.wxss */
.reportContent {
  position: relative;
  border: 1px solid #ddd;
  border: 2rpx solid #ddd;
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  padding: 18rpx 30rpx 30rpx 30rpx;
  background-color: #2F58EE;
  box-sizing: border-box;
  z-index: 10;
}
.bgImage {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: -1;
}
.baseInfoBox {
  display: flex;
  justify-content: space-between;
  color: #ffffff;
}
.baseInfoBox .textBox {
  width: 500rpx;
  margin-top: 72rpx;
}
.baseInfoBox .titleItem {
  font-size: 40rpx;
  font-weight: 600;
  line-height: 56rpx;
}
.baseInfoBox .subTitleItem {
  width: 280rpx;
  height: 40rpx;
  font-size: 28rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: #ffffff;
  line-height: 40rpx;
}

